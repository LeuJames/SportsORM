@{
    ViewData["Title"] = "Level 1";
}

<div class="well">
    <p>Using the SportsORM, complete all the following queries and show their results on Level1.cshtml.</p>
    <ol>
        <li>...all womens' leagues</li>
          <ul>
            @foreach (League l in ViewBag.One)
            {
              <li>@l.Name</li>
            }
          </ul>
        <li>...all leagues where sport is any type of hockey</li>
          <ul>
            @foreach (League l in ViewBag.Two)
            {
              <li>@l.Name</li>
            }
          </ul>
        <li>...all leagues where sport is something OTHER THAN football</li>
          <ul>
            @foreach (League l in ViewBag.Three)
            {
              <li>@l.Name</li>
            }
          </ul>
        <li>...all leagues that call themselves "conferences"</li>
          <ul>
            @foreach (League l in ViewBag.Four)
            {
              <li>@l.Name</li>
            }
          </ul>
        <li>...all leagues in the Atlantic region</li>
          <ul>
            @foreach (League l in ViewBag.Five)
            {
              <li>@l.Name</li>
            }
          </ul>
        <li>...all teams based in Dallas</li>
          <table class="table table-striped">
              <tr>
                  <th>Team Location</th>
                  <th>Team Name</th>
              </tr>
              @foreach(var t in ViewBag.Six)
              {
                  <tr>
                      <td>@t.Location</td>
                      <td>@t.TeamName</td>
                  </tr>
              }
          </table>
        <li>...all teams named the Raptors</li>
          <table class="table table-striped">
              <tr>
                  <th>Team Location</th>
                  <th>Team Name</th>
              </tr>
              @foreach(var t in ViewBag.Seven)
              {
                  <tr>
                      <td>@t.Location</td>
                      <td>@t.TeamName</td>
                  </tr>
              }
          </table>
        <li>...all teams whose location includes "City"</li>
            <table class="table table-striped">
              <tr>
                  <th>Team Location</th>
                  <th>Team Name</th>
              </tr>
              @foreach(var t in ViewBag.Eight)
              {
                  <tr>
                      <td>@t.Location</td>
                      <td>@t.TeamName</td>
                  </tr>
              }
            </table>
        <li>...all teams whose names begin with "T"</li>
            <table class="table table-striped">
              <tr>
                  <th>Team Location</th>
                  <th>Team Name</th>
              </tr>
              @foreach(var t in ViewBag.Nine)
              {
                  <tr>
                      <td>@t.Location</td>
                      <td>@t.TeamName</td>
                  </tr>
              }
            </table>
        <li>...all teams, ordered alphabetically by location</li>
            <table class="table table-striped">
              <tr>
                  <th>Team Location</th>
                  <th>Team Name</th>
              </tr>
              @foreach(var t in ViewBag.Ten)
              {
                  <tr>
                      <td>@t.Location</td>
                      <td>@t.TeamName</td>
                  </tr>
              }
            </table>
        <li>...all teams, ordered by team name in reverse alphabetical order</li>
            <table class="table table-striped">
              <tr>
                  <th>Team Location</th>
                  <th>Team Name</th>
              </tr>
              @foreach(var t in ViewBag.Eleven)
              {
                  <tr>
                      <td>@t.Location</td>
                      <td>@t.TeamName</td>
                  </tr>
              }
            </table>
        <li>...every player with last name "Cooper"</li>
            <table class="table table-striped">
              <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
              </tr>
              @foreach(var p in ViewBag.Twelve)
              {
                  <tr>
                      <td>@p.FirstName</td>
                      <td>@p.LastName</td>
                  </tr>
              }
            </table>
        <li>...every player with first name "Joshua"</li>
            <table class="table table-striped">
              <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
              </tr>
              @foreach(var p in ViewBag.Thirteen)
              {
                  <tr>
                      <td>@p.FirstName</td>
                      <td>@p.LastName</td>
                  </tr>
              }
            </table>
        <li>...every player with last name "Cooper" EXCEPT those with "Joshua" as the first name</li>
            <table class="table table-striped">
              <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
              </tr>
              @foreach(var p in ViewBag.Fourteen)
              {
                  <tr>
                      <td>@p.FirstName</td>
                      <td>@p.LastName</td>
                  </tr>
              }
            </table>
        <li>...all players with first name "Alexander" OR first name "Wyatt"</li>
            <table class="table table-striped">
              <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
              </tr>
              @foreach(var p in ViewBag.Fifteen)
              {
                  <tr>
                      <td>@p.FirstName</td>
                      <td>@p.LastName</td>
                  </tr>
              }
            </table>
    </ol>
</div>
